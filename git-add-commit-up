#!/bin/bash
GULDNAME=$(guld-name)
GULDHOME="/home/$GULDNAME"
p=$(pwd)
last=$p
while [ $p != $GULDHOME ]; do
    last=$p
    git add -A && git commit -m "update"
    if [ $? != 0 ]; then
        exit 1
    fi
    git-push-user $GULDNAME 2>/dev/null && cd .. && p=$(pwd)
    if [ $? != 0 ]; then
        exit 1
    fi
done
guld-update-perspective $last $GULDNAME
exit $?
